package MyThread01;

public class MyThread extends Thread{
	private int tongAm=0, tongDuong=0;
	public void tongDuong(int[] a) {
		for (int i = 0; i< a.length; i++) {
			if (a[i]>0) tongDuong += a[i];
		}
		System.out.println("Tong duong = "+tongDuong);
	}
	public void tongAm(int[] a) {
		for (int i = 0; i< a.length; i++) {
			if (a[i]<0) tongAm += a[i];
		}
		System.out.println("Tong am = "+tongAm);
	}
	public void run() {
		try {
			System.out.println(getName()+"Going to sleep");
			Thread.sleep(500);
		} catch(InterruptedException exception) {
			System.out.println(exception.toString());
		}
		System.out.println(getName()+"Done sleep");
	}
}
