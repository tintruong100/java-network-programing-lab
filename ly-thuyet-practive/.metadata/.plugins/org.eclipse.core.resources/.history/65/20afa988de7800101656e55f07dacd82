
public class Multitask {
	private int n;

    public MultiTask(int n) {
        this.n = n;
    }

    // Tính giai thừa
    public void calculateFactorial() {
        long result = 1;
        for (int i = 2; i <= n; i++) {
            result *= i;
        }
        System.out.println("Giai thừa của " + n + " là: " + result);
    }

    // Tính tổng từ 1 đến n
    public void calculateSum() {
        int sum = (n * (n + 1)) / 2;
        System.out.println("Tổng từ 1 đến " + n + " là: " + sum);
    }
}
