
public class MultiTask{
	private int n;

    public MultiTask(int n) {
        this.n = n;
    }

    // Tính giai thừa
    public void calculateFactorial() {
        long result = 1;
        for (int i = 2; i <= n; i++) {
            result *= i;
            Thread.sleep(1000);
        }
        System.out.println("n!=" + result);
    }

    // Tính tổng từ 1 đến n
    public void calculateSum() {
        int sum=1;
        for (int i=2; i<=n; i++) {
        	sum += i;
        }
        System.out.println("sum(n)=" + sum);
    }
}
